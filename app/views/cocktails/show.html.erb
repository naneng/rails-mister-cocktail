<h2 class="text-center"><%= @cocktail.name %></h2>
<div class="cocktail-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="card-split">
          <div class="card-split-box">

            <p><%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill, class: "border-radius: 5px" %></p>
          </div>

          <div class="card-split-box">
            <h4><%= @cocktail.name %> Ingredients:</h4>
            <div class="ingredient-card">
              <% @cocktail.doses.each do |dose| %>
              <div>
                <p><%= dose.description %></p>
              </div >
              <div>
                <p><%= dose.ingredient.name %></p>
              </div>
              <%= link_to dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="far fa-trash-alt"></i>
                <% end %>
              <% end %>
            </div> <!-- ingredient card-->
            <div class="add-dose-border"> <!-- add dose-->
                <%= link_to new_cocktail_dose_path(@cocktail) do %>
                   <i class="far fa-plus-square"></i>
                <% end %>
            </div> <!-- add dose-->
          </div>
        </div> <!-- card split-->
        <%= link_to cocktails_path do %>
         <p> <i class="fas fa-home"></i></p>
        <% end %>
      </div> <!-- col-xs etc..-->
    </div> <!-- row-->
  </div> <!-- container-->
</div>
