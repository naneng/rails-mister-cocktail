<div class="container">
  <h1><%= @cocktail.name %></h1>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 cocktail-card-container ">
      <div class="card-split">

        <div>
            <p><%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill, class: "border-radius: 5px" %></p>
          <div>

        </div>
        <div>
          <div>
            <h4><%= @cocktail.name %> Ingredients:</h4>
          </div>


          <div class="">
            <% @cocktail.doses.each do |dose| %>
            <p><%= dose.description %></p>
            <p><%= dose.ingredient.name %></p>
            <%= link_to "Delete Dose", dose_path(dose), method: :delete %>
          </div>
          <% end %>



          <div>

           <%= link_to "Add Dose", new_cocktail_dose_path(@cocktail) %>
          </div>
        </div>
        <%= link_to cocktails_path do %>
          <i class="fas fa-home"></i>
        <% end %>

      </div>
    </div>
  </div>

</div>

